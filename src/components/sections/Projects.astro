---
import Section from "@/components/section.astro"
import GitHub from "@/icons/GitHub.astro"
import Flex from "../Flex.astro"
import ExternalLink from "@/icons/ExternalLink.astro"
import EsCv from '@cv'
import EnCv from '@enCv'
const url=Astro.url
const isEnglish=url.pathname ==='/en'
const getCv= isEnglish ? EnCv : EsCv
const {projects}= getCv
---

<Section title={isEnglish ? "Projects": "Proyectos"}>
    <ul>
      {
        projects.map(({ url, description, highlights, name, isActive,githubUrl }) => {
          return (
            <li>
              <article>
                <header>
                  <Flex justifyContent="space-between">
                    <h3>                  
                      {name}               
                      {isActive && <span>â€¢</span>}                   
                     </h3>
                    <Flex>                      
                      <a href={url} target="_blank">
                        <ExternalLink/>
                      </a>
                      <a href={githubUrl} target="_blank">
                        <GitHub/>  
                      </a>                    
                    </Flex>
                  </Flex>                
                  <p>{description}</p>
                </header>
                <footer>
                  {highlights.map((highlight) => {
                    return <span>{highlight}</span>
                  })}
                </footer>
              </article>
            </li>
          )
        })
      }
    </ul>
  </Section>
  
  <style>
    ul {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1rem;
      margin-inline: -16px;
    }
  
    article {
      border-radius: 8px;
      border: 1px solid #f2f2f2;
      gap: 16px;
      display: flex;
      flex-direction: column;
      padding: 16px;
      height: 100%;
    }
  
    article header {
      flex: 1;
    }
  
    article h3 {
      margin-bottom: 4px;
    }
  
    article a {
      color: #111;
      margin-left: 6px;
    }
  
    article a:hover {
      text-decoration: underline;
    }
  
    article p {
      font-size: 0.75rem;
      line-height: 1.2rem;
      margin-bottom: 4px;
    }
  
    article h3 span {
      color: rgb(0, 188, 47);
    }
  
    footer {
      display: flex;
      flex-wrap: wrap;
      gap: 4px;
      font-size: 0.6rem;
    }
  
    footer span {
      border-radius: 6px;
      background: #eee;
      color: #444;
      font-size: 0.6rem;
      font-weight: 500;
      padding: 0.2rem 0.6rem;
    }
  </style>